@model Asr.Models.Slot

<h2>Room Availability</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RoomAvail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Enter Date in dd/mm/yyyy format:</label><br />
                @Html.TextBoxFor(x => x.StartTime, "{0:dd/MM/yyyy}")
            </div>
            <div class="form-group">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>